<Page
    x:Class="RestaurantManager.UWindows.OrderPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <AppBar x:ConnectionId='1' x:Name="AppBarTop" Background="#FF060000" Width="Auto" Foreground="#FFF9EEEE" VerticalAlignment="Stretch" IsOpen="True">
            <AppBarButton x:ConnectionId='2' x:Name="appBarBtnHomeFromOrderpage" HorizontalAlignment="Left" Icon="Home" Label="Home" Foreground="#FFFCFCFC" RequestedTheme="Dark"                                    />
        </AppBar>
    </Page.TopAppBar>
    <Grid Background="#FF080000">
        <Grid.RowDefinitions>
            <RowDefinition Height="575*"/>
            <RowDefinition Height="193*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="515*"/>
            <ColumnDefinition Width="509*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='3' x:Name="textBlock" HorizontalAlignment="Left" Margin="60,87,0,0" TextWrapping="Wrap" Text="Special request:" VerticalAlignment="Top" Width="335" Foreground="#FFFFFDFD"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock1" Grid.Column="1" HorizontalAlignment="Left" Margin="55,87,0,0" TextWrapping="Wrap" Text="Order items:" VerticalAlignment="Top" Foreground="#FFF6F2F2" Width="255"/>
        <Button x:ConnectionId='5' x:Name="button" Content="Add to order" HorizontalAlignment="Left" Margin="110,45,0,0" Grid.Row="1" VerticalAlignment="Top" Width="260" Background="#33FFF7F7" Foreground="#FFF7F0F0"/>
        <Button x:ConnectionId='6' x:Name="button_Copy" Content="Submit order" HorizontalAlignment="Left" Margin="90,45,0,0" Grid.Row="1" VerticalAlignment="Top" Width="260" Background="#33FFF7F7" Foreground="#FFF7F0F0" Grid.Column="1"/>
        <ListView x:ConnectionId='7' x:Name="listViewLeft" HorizontalAlignment="Left" Height="405" Margin="60,145,0,0" VerticalAlignment="Top" Width="405" Background="#FFFBF3B3"/>
        <ListView x:ConnectionId='8' x:Name="listViewRight" HorizontalAlignment="Left" Height="405" Margin="55,145,0,0" VerticalAlignment="Top" Width="405" Background="#FFFBF3B3" Grid.Column="1"/>

    </Grid>
</Page>

