<Application
    x:Class="RestaurantManager.UWindows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UWindows"
    xmlns:models="using:RestaurantManager.Models"
    
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="32" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="32" />
            <!--Above: setting font size 32 as a global resource for all textblocks-->
        </Style>
        
        <!--Under: Defining DataManager as a application wide resource. Using the key "globalsource" as reference point-->
        <models:DataManager x:Key="globalsource" />

    </Application.Resources>
    

</Application>

